<%- include("header") -%>
<body>
<div class="box" id="heading">
    <h1><%=listTitle%></h1>
</div>

<div class="box">
    <form action="/deleteOther" method="post">
        <% for(var i=0; i<newListItem.length; i++){ %>
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= newListItem[i]._id %>" onChange="this.form.submit()">
            <p><%= newListItem[i].item %></p>
            
        </div>    
        <% } %>
        <input type="hidden" name="listN" value="<%=listTitle%>">
    </form>
    
    

    <form class="items" action="<%=routeN%>"  method="post">  
        <input type="text" name="todo1" placeholder="newitem" autocomplete="off">
        <button style="height: 20px;" type="submit" name="todoButton" value="<%=listTitle%>" >+</button>
    </form>
</div>
</body>
</html>